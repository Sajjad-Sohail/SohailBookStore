@model HomeIndexViewModel

@{ 
    ViewData["Title"] = "Index";
}

@await Html.PartialAsync("_Carousel", Model.Carousels)

<h2 class="text text-center">Book List</h2>
<div class="container marketing">
    <div class="row">
        @foreach(var item in Model.Books)
        {
        <div class="col-lg-4">
            <img class="img img-rounded" src="~/Images/@item.image" alt="@item.Title" width="140" />
            <br /><br />
            <h5>@item.Title</h5>
            <p><a class="btn btn-sm btn-secondary" href="/home/details/@item.Id" role="button">View Details..</a></p>
            <br /><br /><br />
        </div>
        }


    </div>

</div>