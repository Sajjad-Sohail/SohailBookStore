@model IEnumerable<Carousel>
@{ 
    int count = 0;
}
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1" class=""></li>
            <li data-target="#myCarousel" data-slide-to="2" class=""></li>
            <li data-target="#myCarousel" data-slide-to="3" class=""></li>
        </ol>
        <div class="carousel-inner" style="">
            @foreach (var item in Model)
            {


            <div class="carousel-item @(count==0? "active":"")">
                @switch (count++)
                {
                    case 0:
                        <img class="first-slide" src="~/Images/plain_grey.jpg" alt="First slide" id="carouselImage">
                        break;
                    case 1:
                        <img class="second-slide" src="~/Images/plain_grey.jpg" alt="Second slide">
                        break;
                    case 2:
                        <img class="third-slide" src="~/Images/plain_grey.jpg" alt="Third slide">
                        break;
                    case 3:
                        <img class="fourth-slide" src="~/Images/christmas_discounts.jpg" alt="Fourth slide">
                        break;

                }
                <div class="container" style="padding-top:10px;">
                    <div class="row">
                        @*<div class="col-md-2">
                    <img src="~/Images/@item.ImageURL" width="250" />
                </div>*@
                        @*<div class="col-md-2">
                    <img src="~/Images/@item.ImageURL" class="img-responsive" width="250" />
                </div>*@
                        <div class="col-md-8">
                            <div class="carousel-caption text-left">
                             @if (count != 4) { 
                                <img src="~/Images/@item.ImageURL" width="250" />
                                <br />
                                <h2>@item.Title</h2>
                                <p>@item.Description</p>
                                <p><a class="btn btn-lg btn-primary" href="/home/details/@item.Id" role="button">Read more..</a></p>
                          }  </div>
                        </div>
                    </div>

                </div>

            </div>




            }

        </div>
            <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
